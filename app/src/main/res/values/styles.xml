<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance">
        <item name="android:textColor">@color/color_text</item>
    </style>

    <style name="TextAppearance.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextAppearance.Subtitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="FloatingActionButton" parent="ThemeOverlay.MaterialComponents"/>

    <style name="FloatingActionButton.Light">
        <item name="backgroundTint">@android:color/white</item>
        <item name="tint">@android:color/black</item>
    </style>

</resources>